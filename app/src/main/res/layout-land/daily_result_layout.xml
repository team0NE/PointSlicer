<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5sp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">
        <TextView
            android:id="@+id/sales_per_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sales_per_day"
            android:textStyle="bold|italic"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/sales_per_day_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="italic"
            android:textSize="20sp"
            android:layout_gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">
        <TextView
            android:id="@+id/date_sales"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/date_sales"
            android:textStyle="bold|italic"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/date_sales_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="italic"
            android:textSize="20sp"
            android:layout_gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">
        <TextView
            android:id="@+id/difference"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/difference_null"
            android:textStyle="bold|italic"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/difference_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="italic"
            android:textSize="20sp"
            android:layout_gravity="center"/>
    </LinearLayout>

</LinearLayout>